<UserControl x:Class="ZalTestApp.LexemeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZalTestApp"
        mc:Ignorable="d">
    <Border BorderBrush="Black" BorderThickness="1" Margin="20,40,0,0" Padding="10,2,10,5" VerticalAlignment="Top" HorizontalAlignment="Left" Width="250" Height="365" Grid.Column="0">
        <Grid Margin="0,0,0,0" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <!--                <TextBlock Style="{DynamicResource NameField}" Text="Исходная форма"/>  -->
            <!--                <TextBlock Style="{DynamicResource NameField}" Text="Графическая основа" Grid.Row="1"/> -->
            <TextBlock Style="{DynamicResource NameField}" Text="Основной символ" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left"/>
            <TextBlock Style="{DynamicResource NameField}" Text="Индекс" Grid.Row="2" HorizontalAlignment="Left"/>
            <TextBlock Style="{DynamicResource NameField}" Text="Схема ударения" Grid.Row="3" HorizontalAlignment="Left"/>
            <TextBlock Style="{DynamicResource NameField}" Text="Доп. информация" Grid.Row="4" HorizontalAlignment="Left" />

            <!--                <TextBlock Style="{DynamicResource DataField}" Text="{Binding Path=SourceForm}" Grid.Column="1"/>  -->
            <!--                <TextBlock Style="{DynamicResource DataField}" Text="{Binding Path=GraphicStem}" Grid.Row="1" Grid.Column="1"/>  -->
            <TextBlock Style="{DynamicResource DataField}" Text="{Binding Path=MainSymbol}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" />
            <TextBlock Style="{DynamicResource DataField}" Text="{Binding Path=Index}" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" />
            <TextBlock Style="{DynamicResource DataField}" Text="{Binding Path=StressSchema}" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" />
            <TextBlock Style="{DynamicResource DataField}" Text="{Binding Path=Advanced}" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" />

            <!--<Button Style="{DynamicResource BtnLarge}" Content="Парадигма" Command="{Binding ShowParadigmCommand}" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Margin="10,-10,0,0" />-->
            <Button Style="{DynamicResource BtnLarge}" Content="Сохранить" Command="{Binding SaveParadigmCommand}" Grid.Column="0" Grid.Row="6" Grid.RowSpan="2" Margin="10,0,0,0" />
            <Button Style="{DynamicResource BtnLarge}" Content="Закрыть" Command="{Binding RemoveLexemeCommand }"  Grid.Column="0" Grid.Row="8" Grid.RowSpan="2" Margin="10,0,0,0" />
        </Grid>
    </Border>
</UserControl>
