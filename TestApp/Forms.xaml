    <DataTemplate DataType="{x:Type local:VerbViewModel}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="100,0,0,0" Padding="0,0,0,30">
                <Grid>
                    <!-- Infinitive -->
                    <TextBox Text="{Binding Path=Infinitive}" Margin="210,20,0,0" Style="{StaticResource FormText}" />

                    <!-- Present tense -->
                    <TextBox Text="Настоящее время" Margin="210,120,0,0" Style="{StaticResource FormLabelWide}" Width="170"/>

                    <!-- Labels -->
                    <TextBox Text="1 Sg" Margin="0,170,0,0" Style="{StaticResource FormLabelWide}" />
                    <TextBox Text="2 Sg" Margin="0,215,0,0" Style="{StaticResource FormLabelWide}" />
                    <TextBox Text="3 Sg" Margin="0,260,0,0" Style="{StaticResource FormLabelWide}" />

                    <!-- Forms -->
                    <TextBox Text="{Binding Path=Pres_Sg_1}" Margin="85,170,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Pres_Sg_2}" Margin="85,215,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Pres_Sg_3}" Margin="85,260,0,0" Style="{StaticResource FormText}" />

                    <!-- Present tense plural -->
                    <!-- Labels -->
                    <TextBox Text="1 Pl" Margin="310,170,0,0" Style="{StaticResource FormLabelWide}" />
                    <TextBox Text="2 Pl" Margin="310,215,0,0" Style="{StaticResource FormLabelWide}" />
                    <TextBox Text="3 Pl" Margin="310,260,0,0" Style="{StaticResource FormLabelWide}" />

                    <!-- Forms -->
                    <TextBox Text="{Binding Path=Pres_Pl_1}" Margin="395,170,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Pres_Pl_2}" Margin="395,215,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Pres_Pl_3}" Margin="395,260,0,0" Style="{StaticResource FormText}" />

                    <!-- Past tense -->
                    <TextBox Text="Прошедшее время" Margin="210,355,0,0" Style="{StaticResource FormLabelWide}" Width="180"/>

                    <!-- Past tense singular -->
                    <!-- Labels -->
                    <TextBox Text="1 Sg" Margin="0,405,0,0" Style="{StaticResource FormLabelWide}" />
                    <TextBox Text="2 Sg" Margin="0,450,0,0" Style="{StaticResource FormLabelWide}" />
                    <TextBox Text="3 Sg" Margin="0,495,0,0" Style="{StaticResource FormLabelWide}" />

                    <!-- Forms -->
                    <TextBox Text="{Binding Path=Past_M}" Margin="85,405,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Past_F}" Margin="85,450,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Past_N}" Margin="85,495,0,0" Style="{StaticResource FormText}" />

                    <!-- Past tense Plural -->
                    <TextBox Text="Pl" Margin="310,405,0,0" Style="{StaticResource FormLabelWide}" />
                    <TextBox Text="{Binding Path=Past_Pl}" Margin="395,405,0,0" Style="{StaticResource FormText}" />
                    
                    <!-- Imperative -->
                    <TextBox Text="Повелительное наклонение" Margin="210,590,0,0" Style="{StaticResource FormLabelWide}" Width="250"/>

                    <!-- Label-->
                    <TextBox Text="2 Sg" Margin="0,640,0,0" Style="{StaticResource FormLabelWide}" />
                    <TextBox Text="{Binding Path=Impv_Sg_2}" Margin="85,640,0,0" Style="{StaticResource FormText}" />

                    <!-- Label-->
                    <TextBox Text="2 Pl" Margin="310,640,0,0" Style="{StaticResource FormLabelWide}" />
                    <TextBox Text="{Binding Path=Impv_Pl_2}" Margin="395,640,0,0" Style="{StaticResource FormText}" />

                    <!-- Participles & adverbials -->
                    <TextBox Text="Причастия и деепричастия" Margin="210,730,0,0" Style="{StaticResource FormLabelWide}" Width="250"/>

                    <TextBox Text="Действ. наст. вр." Width="175" Margin="0,780,0,0" Style="{StaticResource FormLabelWide}" />
                    <TextBox Text="{Binding Path=PPresA_M_Sg_N}" Margin="182,780,0,0" Style="{StaticResource FormText}" />
                    <Button Content="Показать формы" Margin="400,780,0,0" Command="{Binding ShowPresActFormsCommand }" IsEnabled="{Binding Path=PPresAExists}" Style="{StaticResource BtnSmall}" Width="150"  HorizontalAlignment="Left" VerticalAlignment="Top"/>

                    <TextBox Text="Деепр. наст. вр." Width="175" Margin="0,825,0,0" Style="{StaticResource FormLabelWide}" />
                    <TextBox Text="{Binding Path=VAdvPres}" Margin="182,825,0,0" Style="{StaticResource FormText}" />

                    <TextBox Text="Действ. прош. вр." Width="175" Margin="0,870,0,0" Style="{StaticResource FormLabelWide}" />
                    <TextBox Text="{Binding Path=PPastA_M_Sg_N}" Margin="182,870,0,0" Style="{StaticResource FormText}" />
                    <Button Content="Показать формы" Margin="400,870,0,0" Command="{Binding ShowPastActFormsCommand }" Style="{StaticResource BtnSmall}" Width="150"  HorizontalAlignment="Left" VerticalAlignment="Top"/>

                    <TextBox Text="Деепр. прош вр." Width="175" Margin="0,915,0,0" Style="{StaticResource FormLabelWide}" />
                    <TextBox Text="{Binding Path=VAdvPast}" Margin="182,915,0,0" Style="{StaticResource FormText}" />

                    <TextBox Text="Страд. наст. вр." Width="175" Margin="0,960,0,0" Style="{StaticResource FormLabelWide}" />
                    <TextBox Text="{Binding Path=PPresPL_M_Sg_N}" Margin="182,960,0,0" Style="{StaticResource FormText}" />
                    <Button Content="Показать формы" Margin="400,960,0,0" Command="{Binding ShowPresPassFormsCommand }" IsEnabled="{Binding Path=PPresPExists}" Style="{StaticResource BtnSmall}" Width="150"  HorizontalAlignment="Left" VerticalAlignment="Top"/>

                    <TextBox Text="Страд. прош. вр." Width="175" Margin="0,1005,0,0" Style="{StaticResource FormLabelWide}" />
                    <TextBox Text="{Binding Path=PPastPL_M_Sg_N}" Margin="182,1005,0,0" Style="{StaticResource FormText}" />
                    <Button Content="Показать формы" Margin="400,1005,0,0" Command="{Binding ShowPastPassFormsCommand }" IsEnabled="{Binding Path=PPastPExists}" Style="{StaticResource BtnSmall}" Width="150"  HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </Grid>
            </ScrollViewer>
            <Button Style="{DynamicResource BtnLarge}" Content="Назад" Command="{Binding BackCommand }"  Grid.Column="1" Margin="0,0,0,60" />
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type local:RegressionGridViewModel}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="51*">
                </ColumnDefinition>
                <ColumnDefinition Width="14*"/>
            </Grid.ColumnDefinitions>

            <Button Style="{DynamicResource BtnSmall}" Content="Прогнать" Command="{Binding RunTestCommand}" Grid.Column="1" HorizontalAlignment="Left" Margin="108,260,0,0" VerticalAlignment="Top" Width="95"/>
            <Button Style="{DynamicResource BtnSmall}" Content="Сохранить" Command="{Binding SaveCommand}" Grid.Column="1" HorizontalAlignment="Left" Margin="108,300,0,0" VerticalAlignment="Top" Width="95"/>
            <Button Style="{DynamicResource BtnSmall}" Content="Стереть" Command="{Binding DeleteCommand}" Grid.Column="1" HorizontalAlignment="Left" Margin="108,340,0,0" VerticalAlignment="Top" Width="95"/>
            <Button Style="{DynamicResource BtnSmall}" Content="Отмена" Command="{Binding CancelCommand}" Grid.Column="1" HorizontalAlignment="Left" Margin="108,380,0,0" VerticalAlignment="Top" Width="95"/>
            <Button Style="{DynamicResource BtnSmall}" Content="Назад" Command="{Binding BackCommand}" Grid.Column="1" HorizontalAlignment="Left" Margin="108,420,0,0" VerticalAlignment="Top" Width="95"/>

            <DataGrid Style="{DynamicResource Table}" ItemsSource="{Binding RegressionData}"  AutoGenerateColumns="False" CanUserAddRows="False" AlternatingRowBackground="Gainsboro" AlternationCount="2">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Binding="{Binding IsSelected}" Width="30" IsReadOnly="False" />
                    <DataGridTextColumn Header="Исходная форма" Binding="{Binding SourceForm}" Width="250" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Хеш" Binding="{Binding LexemeHash}" Width="500" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Результат" Binding="{Binding TestResult}" Width="150" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DataTemplate>

</ResourceDictionary>
    