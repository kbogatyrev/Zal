                    <TextBox Text="G" Margin="33,160,0,0" Style="{StaticResource FormLabel}" />
                    <TextBox Text="P" Margin="33,205,0,0" Style="{StaticResource FormLabel}" />
                    <TextBox Text="D" Margin="33,250,0,0" Style="{StaticResource FormLabel}" />
                    <TextBox Text="I" Margin="33,295,0,0" Style="{StaticResource FormLabel}" />
