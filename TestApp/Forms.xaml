<!--
                Lexeme description panel    
-->    
    <DataTemplate DataType="{x:Type local:LexemeViewModel}">
        <Border BorderBrush="Black" BorderThickness="1" Margin="80, 10, 80, 10">
            <Grid Margin="30,30,30,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="121*"/>
                    <ColumnDefinition Width="159*"/>
                    <ColumnDefinition Width="82*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            
                <TextBlock Style="{DynamicResource NameField}" Text="Исходная форма"/>
                <TextBlock Style="{DynamicResource NameField}" Text="Графическая основа" Grid.Row="1"/>
                <TextBlock Style="{DynamicResource NameField}" Text="Основной символ" Grid.Row="2"/>
                <TextBlock Style="{DynamicResource NameField}" Text="Индекс" Grid.Row="3"/>
                <TextBlock Style="{DynamicResource NameField}" Text="Схема ударения" Grid.Row="4"/>
                <TextBlock Style="{DynamicResource NameField}" Text="Доп. информация" Grid.Row="5"/>

                <TextBlock Style="{DynamicResource DataField}" Text="{Binding Path=SourceForm}" Grid.Column="1"/>
                <TextBlock Style="{DynamicResource DataField}" Text="{Binding Path=GraphicStem}" Grid.Row="1" Grid.Column="1"/>
                <TextBlock Style="{DynamicResource DataField}" Text="{Binding Path=MainSymbol}" Grid.Row="2" Grid.Column="1"/>
                <TextBlock Style="{DynamicResource DataField}" Text="{Binding Path=Index}" Grid.Row="3" Grid.Column="1"/>
                <TextBlock Style="{DynamicResource DataField}" Text="{Binding Path=StressSchema}" Grid.Row="4" Grid.Column="1"/>
                <TextBlock Style="{DynamicResource DataField}" Text="{Binding Path=Advanced}" Grid.Row="5" Grid.Column="1"/>

                <Button Style="{DynamicResource Btn}" Content="Парадигма" Command="{Binding ShowParadigmCommand}" Grid.Row="2" Grid.Column="2" />
            </Grid>
        </Border>
    </DataTemplate>

<!--
                Noun panel
-->
    <DataTemplate DataType="{x:Type local:NounViewModel}">
        <StackPanel Orientation="Horizontal">
            <Button Style="{DynamicResource Btn}" Content="Вернуццо" Command="{Binding BackCommand }"  Margin="40,0,0,300"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="100,0,0,0">
                <Grid>
                    <Border BorderBrush="Black" BorderThickness="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="128,25,0,0" Width="22" Height="22" >
                        <TextBlock Height="22" Margin="0,0,0,0" TextWrapping="Wrap" Text="Sg" FontWeight="Bold" TextAlignment="Center" />
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="445,25,0,0" Width="22" Height="22" >
                        <TextBlock Height="22" Margin="0,0,0,0" TextWrapping="Wrap" Text="Pl" FontWeight="Bold" TextAlignment="Center" />
                    </Border>

                    <!-- Singular -->
                    <!-- Case Labels -->
                    <TextBox Text="N" Margin="33,70,0,0" Style="{StaticResource FormLabel}" />
                    <TextBox Text="A" Margin="33,115,0,0" Style="{StaticResource FormLabel}" />
                    <TextBox Text="G" Margin="33,160,0,0" Style="{StaticResource FormLabel}" />
                    <TextBox Text="P" Margin="33,205,0,0" Style="{StaticResource FormLabel}" />
                    <TextBox Text="D" Margin="33,250,0,0" Style="{StaticResource FormLabel}" />
                    <TextBox Text="I" Margin="33,295,0,0" Style="{StaticResource FormLabel}" />
                    <TextBox Text="G2" Margin="33,350,0,0" Style="{StaticResource FormLabel}" />
                    <TextBox Text="L2" Margin="33,395,0,0" Style="{StaticResource FormLabel}" />

                    <!-- Forms -->
                    <TextBox Text="{Binding Path=Noun_Sg_N}" Margin="70,70,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Noun_Sg_A}" Margin="70,115,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Noun_Sg_G}" Margin="70,160,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Noun_Sg_P}" Margin="70,205,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Noun_Sg_D}" Margin="70,250,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Noun_Sg_I}" Margin="70,295,0,0" Style="{StaticResource FormText}" />

                    <TextBox Text="{Binding Path=Noun_Sg_Part}" Margin="70,350,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Noun_Sg_L}" Margin="70,395,0,0" Style="{StaticResource FormText}" />

                    <!-- Plural -->
                    <!-- Case Labels -->
                    <TextBox Text="N" Margin="350,70,0,0" Style="{StaticResource FormLabel}" />
                    <TextBox Text="A" Margin="350,115,0,0" Style="{StaticResource FormLabel}" />
                    <TextBox Text="G" Margin="350,160,0,0" Style="{StaticResource FormLabel}" />
                    <TextBox Text="P" Margin="350,205,0,0" Style="{StaticResource FormLabel}" />
                    <TextBox Text="D" Margin="350,250,0,0" Style="{StaticResource FormLabel}" />
                    <TextBox Text="I" Margin="350,295,0,0" Style="{StaticResource FormLabel}" />

                    <!-- Forms -->
                    <TextBox Text="{Binding Path=Noun_Pl_N}" Margin="387,70,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Noun_Pl_A}" Margin="387,115,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Noun_Pl_G}" Margin="387,160,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Noun_Pl_P}" Margin="387,205,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Noun_Pl_D}" Margin="387,250,0,0" Style="{StaticResource FormText}" />
                    <TextBox Text="{Binding Path=Noun_Pl_I}" Margin="387,295,0,0" Style="{StaticResource FormText}" />
                </Grid>
            </ScrollViewer>
        </StackPanel>
    </DataTemplate>
    
