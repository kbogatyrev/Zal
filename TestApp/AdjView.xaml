                <TextBox Text="{Binding Path=AdjL_N_Sg_P}" Margin="615,250,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjL_N_Sg_D}" Margin="615,295,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjL_N_Sg_I}" Margin="615,340,0,0" Style="{StaticResource FormText}" />

                <!-- Plural -->
                <TextBox Text="Pl" Margin="100,430,0,0" Style="{StaticResource FormLabelWide}" />

                <!-- Case Labels -->
                <TextBox Text="N" Margin="0,480,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="A" Margin="0,525,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="A Anim" Margin="0,570,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="G" Margin="0,615,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="P" Margin="0,660,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="D" Margin="0,705,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="I" Margin="0,750,0,0" Style="{StaticResource FormLabelWide}" />

                <!-- Forms -->
                <TextBox Text="{Binding Path=AdjL_Pl_N}" Margin="65,480,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjL_Pl_A_Inanim}" Margin="65,525,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjL_Pl_A_Anim}" Margin="65,570,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjL_Pl_G}" Margin="65,615,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjL_Pl_P}" Margin="65,660,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjL_Pl_D}" Margin="65,705,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjL_Pl_I}" Margin="65,750,0,0" Style="{StaticResource FormText}" />

