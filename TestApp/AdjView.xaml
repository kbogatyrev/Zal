                <TextBox Text="{Binding Path=AdjL_M_Sg_D}" Margin="65,295,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjL_M_Sg_I}" Margin="65,340,0,0" Style="{StaticResource FormText}" />

