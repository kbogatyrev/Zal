                <TextBox Text="G" Margin="275,205,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="P" Margin="275,250,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="D" Margin="275,295,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="I" Margin="275,340,0,0" Style="{StaticResource FormLabelWide}" />

                <!-- Forms -->
                <TextBox Text="{Binding Path=AdjL_F_Sg_N}" Margin="340,70,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjL_F_Sg_A}" Margin="340,115,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjL_F_Sg_G}" Margin="340,205,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjL_F_Sg_P}" Margin="340,250,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjL_F_Sg_D}" Margin="340,295,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjL_F_Sg_I}" Margin="340,340,0,0" Style="{StaticResource FormText}" />

                <!-- Neuter -->
                <!-- Singular -->
                <TextBox Text="N Sg" Margin="650,20,0,0" Style="{StaticResource FormLabelWide}" />

                <!-- Case Labels -->
                <TextBox Text="N" Margin="550,70,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="A" Margin="550,115,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="G" Margin="550,205,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="P" Margin="550,250,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="D" Margin="550,295,0,0" Style="{StaticResource FormLabelWide}" />
