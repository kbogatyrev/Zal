        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="30,10,0,20">
            <Grid Margin="0,0,20,0">
                <!-- Masculine -->
                <!-- Singular -->
                <TextBox Text="M Sg" Margin="100,20,0,0" Style="{StaticResource FormLabelWide}" />
