        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="80,10,0,30">
            <Grid>
                <!-- Masculine -->
                <!-- Singular -->
                <TextBox Text="M Sg" Margin="100,20,0,0" Style="{StaticResource FormLabelWide}" />
                <!-- Case Labels -->
                <TextBox Text="N" Margin="0,70,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="A" Margin="0,115,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="A Anim." Margin="0,160,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="G" Margin="0,205,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="P" Margin="0,250,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="D" Margin="0,295,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="I" Margin="0,340,0,0" Style="{StaticResource FormLabelWide}" />

                <!-- Forms -->
                <TextBox Text="{Binding Path=AdjL_M_Sg_N}" Margin="65,70,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjL_M_Sg_A_Inanim}" Margin="65,115,0,0" Style="{StaticResource FormText}" />
