                <TextBox Text="Краткие формы" Margin="470,430,0,0" Style="{StaticResource FormLabelWide}" Width="121" />

                <!-- Labels -->
                <TextBox Text="M Sg" Margin="386,480,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="F Sg" Margin="386,525,0,0" Style="{StaticResource FormLabelWide}" RenderTransformOrigin="0.18,0.529" />
                <TextBox Text="N Sg" Margin="386,570,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="Pl" Margin="386,615,0,0" Style="{StaticResource FormLabelWide}" />

                <!-- Forms -->
                <TextBox Text="{Binding AdjS_M}" Margin="454,480,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding AdjS_F}" Margin="454,525,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding AdjS_N}" Margin="454,570,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding AdjS_Pl}" Margin="454,615,0,0" Style="{StaticResource FormText}" />

                <!-- Scroll buttons for multiple forms; not shown when only one form is available -->
                <Button Margin="602,484,0,0" CommandParameter="AdjL_N_Pl_G" Command="{Binding FormScrollUpCommand}" Style="{StaticResource BtnFormScrollerUp}" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="{Binding AdjL_Pl_G_HasMultipleForms, Converter={StaticResource ScrollStatusConverter}}" />
                <Button Margin="602,492,0,0" CommandParameter="AdjL_N_Pl_G" Command="{Binding FormScrollDownCommand}" Style="{StaticResource BtnFormScrollerDown}" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="{Binding AdjL_Pl_G_HasMultipleForms, Converter={StaticResource ScrollStatusConverter}}" />

                <Button Margin="602,529,0,0" CommandParameter="AdjL_N_Pl_P" Command="{Binding FormScrollUpCommand}" Style="{StaticResource BtnFormScrollerUp}" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="{Binding AdjL_Pl_P_HasMultipleForms, Converter={StaticResource ScrollStatusConverter}}" />
                <Button Margin="602,537,0,0" CommandParameter="AdjL_N_Pl_P" Command="{Binding FormScrollDownCommand}" Style="{StaticResource BtnFormScrollerDown}" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="{Binding AdjL_Pl_P_HasMultipleForms, Converter={StaticResource ScrollStatusConverter}}" />

                <Button Margin="602,574,0,0" CommandParameter="AdjL_N_Pl_D" Command="{Binding FormScrollUpCommand}" Style="{StaticResource BtnFormScrollerUp}" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="{Binding AdjL_Pl_D_HasMultipleForms, Converter={StaticResource ScrollStatusConverter}}" />
                <Button Margin="602,582,0,0" CommandParameter="AdjL_N_Pl_D" Command="{Binding FormScrollDownCommand}" Style="{StaticResource BtnFormScrollerDown}" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="{Binding AdjL_Pl_D_HasMultipleForms, Converter={StaticResource ScrollStatusConverter}}" />

                <Button Margin="602,619,0,0" CommandParameter="AdjL_N_Pl_I" Command="{Binding FormScrollUpCommand}" Style="{StaticResource BtnFormScrollerUp}" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="{Binding AdjL_Pl_I_HasMultipleForms, Converter={StaticResource ScrollStatusConverter}}" />
                <Button Margin="602,627,0,0" CommandParameter="AdjL_N_Pl_I" Command="{Binding FormScrollDownCommand}" Style="{StaticResource BtnFormScrollerDown}" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="{Binding AdjL_Pl_I_HasMultipleForms, Converter={StaticResource ScrollStatusConverter}}" />

                <!-- Triangle image -->
                <Image HorizontalAlignment="Left" Margin="617,487,0,0" VerticalAlignment="Top" Style="{Binding AdjS_M_Marks, Converter={StaticResource StyleConverter}}" />
                <Image HorizontalAlignment="Left" Margin="617,532,0,0" VerticalAlignment="Top" Style="{Binding AdjS_F_Marks, Converter={StaticResource StyleConverter}}" />
                <Image HorizontalAlignment="Left" Margin="617,577,0,0" VerticalAlignment="Top" Style="{Binding AdjS_N_Marks, Converter={StaticResource StyleConverter}}" />
                <Image HorizontalAlignment="Left" Margin="617,622,0,0" VerticalAlignment="Top" Style="{Binding AdjS_Pl_Marks, Converter={StaticResource StyleConverter}}" />

                <!-- Comparative -->
                <TextBox Text="Сравн." Margin="504,681,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="{Binding AdjComp}" Margin="454,718,0,0" Style="{StaticResource FormText}" />
                <Button Margin="602,722,0,0" CommandParameter="AdjComp" Command="{Binding FormScrollUpCommand}" Style="{StaticResource BtnFormScrollerUp}" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="{Binding AdjComp_HasMultipleForms, Converter={StaticResource ScrollStatusConverter}}" />
                <Button Margin="602,730,0,0" CommandParameter="AdjComp" Command="{Binding FormScrollDownCommand}" Style="{StaticResource BtnFormScrollerDown}" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="{Binding AdjComp_HasMultipleForms, Converter={StaticResource ScrollStatusConverter}}" />
                <Image HorizontalAlignment="Left" Margin="627,725,0,0" VerticalAlignment="Top" Style="{Binding AdjComp_Marks, Converter={StaticResource StyleConverter}}" />
            </Grid>
        </ScrollViewer>
        <Button Style="{DynamicResource BtnLarge}" Content="Сохранить" Command="{Binding SaveFormsCommand}" Margin="5,424,0,0" Grid.Column="1" />
    </Grid>
</UserControl>
