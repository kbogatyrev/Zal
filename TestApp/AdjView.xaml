                <TextBox Text="{Binding Path=AdjL_F_Sg_D}" Margin="315,295,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjL_F_Sg_I}" Margin="315,340,0,0" Style="{StaticResource FormText}" />

                <!-- Neuter -->
                <!-- Singular -->
                <TextBox Text="N Sg" Margin="600,20,0,0" Style="{StaticResource FormLabelWide}" />

                <!-- Case Labels -->
                <TextBox Text="N" Margin="500,70,0,0" Style="{StaticResource FormLabelWide}" />
