                <TextBox Text="N Sg" Margin="250,570,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="Pl" Margin="250,615,0,0" Style="{StaticResource FormLabelWide}" />

                <!-- Forms -->
                <TextBox Text="{Binding Path=AdjS_M}" Margin="315,480,0,0" Style="{StaticResource FormText}" />
