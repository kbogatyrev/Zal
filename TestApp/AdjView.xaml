                <TextBox Text="N Sg" Margin="275,570,0,0" Style="{StaticResource FormLabelWide}" />
                <TextBox Text="Pl" Margin="275,615,0,0" Style="{StaticResource FormLabelWide}" />

                <!-- Forms -->
                <TextBox Text="{Binding Path=AdjS_M}" Margin="340,480,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjS_F}" Margin="340,525,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjS_N}" Margin="340,570,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Path=AdjS_Pl}" Margin="340,615,0,0" Style="{StaticResource FormText}" />

