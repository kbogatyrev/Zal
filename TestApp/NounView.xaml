                <TextBox Text="{Binding Noun_Sg_I}" Margin="70,295,0,0" Style="{StaticResource FormText}" />

                <TextBox Text="{Binding Noun_Sg_Part}" Margin="70,356,0,0" Style="{StaticResource FormText}" />
                <TextBox Text="{Binding Noun_Sg_L}" Margin="70,401,0,0" Style="{StaticResource FormText}" />
